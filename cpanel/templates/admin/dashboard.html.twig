{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}
{% block description %}
	{{ description }}
{% endblock %}

{% block body %}
	<!-- End of Brand Mobiles -->
	{% include 'admin/partials/brandmobile.html.twig' %}
	<!-- End of Brand Mobiles -->

	<!-- Page Wrapper -->
		<div
		id="wrapper"> <!-- Sidebar -->
		{% include 'admin/partials/sidebar.html.twig' %}
		<!-- End of Sidebar -->

		<!-- Content Wrapper -->
			<div
			id="content-wrapper" class="d-flex flex-column"> <!-- Main Content -->
			<div
				id="content">
				<!-- Topbar -->
				{% include 'admin/partials/topbar.html.twig' %}
				<!-- End of Topbar -->

				<!-- Begin Page Content -->
					<div class="container-fluid"> 
					{% if errors is defined %}
						{% for error in errors %}
							<div class="alert alert-danger alert-dismissible fade show" role="alert">
								{{ error }}
								<button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
						{% endfor %}
					{% endif %}
					{% block content %}{% endblock %}
				</div>
				<!-- /.container-fluid -->
			</div>
			<!-- End of Main Content -->

			<!-- Footer -->
			{% include 'admin/partials/footer.html.twig' %}
			<!-- End of Footer -->
		</div>
		<!-- End of Content Wrapper -->
	</div>
	<!-- End of Page Wrapper -->
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}
